<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/layoutKos"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_95sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:backgroundTint="@color/primary_color"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivKost"
                android:layout_width="@dimen/_136sdp"
                android:layout_height="@dimen/_95sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/beranda_ex_kostt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                app:cardElevation="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_5sdp">

                <TextView
                    android:id="@+id/tvMayoritas"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="wrap_content"
                    android:text="MAHASISWA"
                    android:background="@color/black"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNameKost"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:text="Nama Barangnya paling keren"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="inherit"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:tint="@color/black"
                    android:src="@drawable/beranda_location"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvLokasiKost"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kecamatan Depok"
                    android:textSize="@dimen/_9ssp"
                    android:textColor="@color/black"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvHargaKost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp1.000.000"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12ssp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
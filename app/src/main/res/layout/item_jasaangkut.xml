<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/layoutJasa"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_90sdp"
    android:backgroundTint="@color/primary_color"
    android:layout_marginHorizontal="@dimen/_8sdp"
    android:layout_marginVertical="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/primary_color">

        <ImageView
            android:id="@+id/ivJasa"
            android:layout_width="@dimen/_136sdp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/beranda_ex_kostt"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/_140sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:gravity="start">

        <TextView
            android:id="@+id/tvNameJasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jasa Pindah Kilat"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_4sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:tint="#FFC107"
                android:src="@drawable/beranda_star_rate"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tvRateAverageJasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5 (18)"
                android:layout_marginStart="@dimen/_2sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_4sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_10sdp"
                android:layout_height="@dimen/_10sdp"
                android:src="@drawable/beranda_location"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tvLokasiJasa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Depok"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_2sdp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHargaJasa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:gravity="end"
                android:text="Harga sekian"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>